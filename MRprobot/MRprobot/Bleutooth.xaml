<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MRprobot.Bleutooth">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bleuthoot"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
               />
            <Button Text="Connect" 
                AbsoluteLayout.LayoutBounds="100,250,200,100"
                ClassId="BleuthootConnect"/>
            <Button Text="Disconnect" 
                 AbsoluteLayout.LayoutBounds="100, 150, 200, 100"
                    ClassId="BleuthootDisconnect"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>