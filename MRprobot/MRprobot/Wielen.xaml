<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MRprobot.Wielen">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#ff2323" Padding="24" CornerRadius="0">
                <Label Text="Sturen" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <AbsoluteLayout>
                <Button Text="Left" 
                        AbsoluteLayout.LayoutBounds="50,150, 150, 100 "
                        />
                <Button Text="Front" 
                        AbsoluteLayout.LayoutBounds="125,50, 150, 100 " 
                        x:Name="Button1"/>
                <Button Text="Right" 
                        AbsoluteLayout.LayoutBounds="200,150, 150, 100 "/>
                <Button Text="Down" 
                        AbsoluteLayout.LayoutBounds="125,250, 150, 100 "
                        ClassId="buttonNRBeneden"/>
            </AbsoluteLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>