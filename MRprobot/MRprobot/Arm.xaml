<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MRprobot.Arm">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#ff2323" Padding="24" CornerRadius="0">
                <Label Text="Arm!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <AbsoluteLayout>

                
                <Button Text="down" 
                AbsoluteLayout.LayoutBounds="100,250,200,100"
                x:Uid="@ + id / toggleButton1"       />
                <Button Text="UP" 
                 AbsoluteLayout.LayoutBounds="100, 150, 200, 100"/>
            </AbsoluteLayout>
           
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>